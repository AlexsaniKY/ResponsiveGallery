@model ResponsiveGallery.Domain.GalleryImage
<div style="padding:.2em" class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <div style="border:1px solid black; border-radius:3px">
        <img src=@Model.ImageURL alt=@Html.DisplayFor(model => model.Title) style="margin:auto; margin-top:1em; max-width:85% ;display:block" />
        <p style="text-align:center; margin:1em 0">@Html.DisplayFor(model => model.Title)</p>

    </div>
</div>